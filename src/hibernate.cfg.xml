<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">
      org.hibernate.dialect.MySQLDialect
    </property>
    <property name ="hibernate.connection.driver_class">
      com.mysql.jdbc.Driver
    </property>
    <property name= "hibernate.connection.url">
      jdbc:mysql://localhost:8889/llantera
    </property>
    <property name = "hibernate.current_session_context_class">org.hibernate.context.internal.ThreadLocalSessionContext</property>
    <property name = "hibernate.connection.username">
      root
    </property>
    <property name = "hibernate.connection.password">
    root
    </property>       
	<mapping class = "mx.itson.espina.nucleo.entidades.Contacto"/> 
	<mapping class = "mx.itson.espina.nucleo.entidades.Cliente"/> 
	<mapping class = "mx.itson.espina.nucleo.entidades.Linea"/>
	<mapping class = "mx.itson.espina.nucleo.entidades.Orden"/>  

  </session-factory>
</hibernate-configuration>
